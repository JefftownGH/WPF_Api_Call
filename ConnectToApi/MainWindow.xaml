<Window x:Class="ConnectToApi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectToApi"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="MainWindow" Height="962.4" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="button" Padding="15" Margin="15" Click="Button_Click">Previous</Button>
            <Button x:Name="button1" Padding="15" Margin="15" Click="Button1_Click">Sun Information</Button>
            <Button x:Name="button2" Padding="15" Margin="15" Click="Button2_Click">Next</Button>
        </StackPanel>

        <Image Grid.Row="1" x:Name="comicImage" Margin="20" />
    </Grid>
</Window>
